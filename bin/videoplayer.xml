<?xml version="1.0" encoding="UTF-8" ?>
<videoplayer>
	<!--
		<autoplay | autosize | repeat | rmtp
			value="true/false | String"
		/>
	-->
	<autoplay value="true" />
	<autosize value="true" />
	<repeat value="false" />
	<rmtp value="null" />

	<panel>
		<!--
			<play | pause | timeline
				src="URL"
				show="always | play | pause | mouse"
				hide="play | stop"
				x="Number | center | left | right" – Default is center
				y="Number | center | top | bottom" – Default is center
			/>
		-->
		<play src="images/play.png" show="pause" />
		<pause src="images/pause.png" show="mouse" hide="pause" />
	</panel>
</videoplayer>